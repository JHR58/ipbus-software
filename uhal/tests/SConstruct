env.Append( LIBS = [ 'uhal' , 'BoostSpiritGrammars' , 'boost_system' , 'boost_filesystem' , 'boost_regex' , 'PugiXML' ])

env.Program('bin/test_uhal', 'src/common/test_uhal.cpp')
